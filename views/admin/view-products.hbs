<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto" >Add Product</a>

        </div>

        <table class="table mt-5">
            <thead>
                <tr>
                    
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                  
                    <td><img style="width:50px;height=50px;"src="/product-images/{{this._id}}.jpg"></td>
                    <td>
                        <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
               {{/each}}
        </table>
    </div>

</section>